{
  "name": "axiomarc",
  "version": "0.0.2",
  "description": "Intelligent [client, server]-side logging for agentic processes.",
  "main": "dist/index.js",
  "bin": {
    "axiomarc": "dist/cli.js",
    "logger": "dist/cli.js"
  },
  "files": [
    "dist",
    "src/templates"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./client": "./src/templates/client/logger.ts",
    "./server": "./src/templates/server/logger.ts",
    "./client-api": "./src/templates/client/api.ts",
    "./inference": "./dist/services/inference.js",
    "./types": "./dist/types/context.js"
  },
  "imports": {
    "#inference": "./src/services/inference.ts"
  },
  "scripts": {
    "build": "tsc && npm run fix-imports",
    "fix-imports": "replace-in-file \"#inference\" \"axiomarc/inference\" \"dist/**/*.js\" --isRegex && replace-in-file \"@/types/context\" \"axiomarc/types\" \"dist/**/*.js\" --isRegex",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "logging",
    "error",
    "ai",
    "agents"
  ],
  "contributors": [
    "Jason Son — @vznh",
    "Alex Truong — @alexhtruong"
  ],
  "devDependencies": {
    "@biomejs/biome": "^2.3.0",
    "@types/bun": "latest",
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@origranot/ts-logger": "^1.12.0",
    "axios": "^1.12.2",
    "chalk": "4",
    "commander": "^14.0.2",
    "replace-in-file": "^8.3.0",
    "zod": "^4.1.12"
  }
}
